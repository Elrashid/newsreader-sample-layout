/*
 * Heading
 * (Top stories, search)
 */

.news-head
  &
    padding: 0 $pad
    overflow: hidden
    border-bottom: solid 1px $line
    border-right: solid 1px $line

    height: $heading-height
    line-height: @height
    
  h1
    float: left
    font-weight: bold
    color: #111
    font-size: 1.05em

  .actions
    float: right

  .search
    &
      display: inline-block
      vertical-align: middle
      text-decoration: none
      color: $accent

    &:hover
      color: $accent - 30%

    &:before
      position: relative
      top: -3px

      ion-icon('ios7-search-strong')
      font-size: 24px
