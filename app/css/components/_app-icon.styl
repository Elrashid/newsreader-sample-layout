.app-icon
  display: inline-block

  width: 50px
  height: 50px
  text-align: center
  line-height: @height
  text-decoration: none

  background: $accent
  color: white

  border-radius: 4px
  font-size: 30px
  font-weight: 300
  transition: all 100ms linear

  &:hover
    background: $accent + 10%

