.content-pane
  &
    display: flex
    flex-direction: column

  .container
    padding: ($pad * 2) $pad
    max-width: 600px
    margin: 0 auto

    @media (max-width: 768px)
      padding: $pad

  .content-head
    flex: 0 0 $heading-height

    @media (min-width: 768px)
      display: none

  .content-area
    overflow-y: auto
    flex: 1 0 90%
