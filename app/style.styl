$line = #ddd
$pad = 15px
$accent = #1af
$gray = #808890
$silver = #BDC3C7
$midnight = #2C3E50 - 20%

$toolbar-width = 80px
$heading-height = 50px

@import 'nib'
@require './css/utils/*'
@require './css/base/*'
@require './css/components/*'

abs($top, $right, $bottom, $left)
  position: absolute
  top: $top
  left: $left
  bottom: $bottom
  right: $right

/*
 * layout
 */

.news-head
  abs: 0 auto auto $toolbar-width
  width: 300px

.news-listing
  abs: $heading-height auto 0 $toolbar-width
  width: 300px
 
.app-toolbar
  abs: 0 auto 0 0
  width: $toolbar-width

.content-area
  abs: 0 0 0 (300px + $toolbar-width)

